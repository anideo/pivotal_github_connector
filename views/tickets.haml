!!! XML
%external_stories{:type => 'array'}
  - @tickets.each do |ticket|
    %external_story
      %external_id #{ticket['number'].first['content']}
      %name #{ticket['title'].first}
      %description #{ticket['body'].first}
      %requested_by #{ticket['user'].first}
      %created_at{:type => 'datetime'} #{ticket['created-at'].first['content']}
      %story_type 
        - str = ticket['labels'].to_s
        - if str =~ /chore/i
          = 'chore'
        - elsif str =~ /feature/i
          = 'feature'
        - else
          = 'bug'
      %estimate{:type => 'integer'}


